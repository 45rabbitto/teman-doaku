<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:fontFamily="@font/poppins_regular">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Doa Sebelum Makan"
                android:textSize="18sp"
                android:textColor="#FF333333"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"/>

            <ImageView
                android:id="@+id/ivRead"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/checkbox_on_background"
                android:tint="#FF4CAF50"
                android:visibility="invisible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvCategory"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harian"
            android:textSize="14sp"
            android:textColor="#FF9370DB"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/tvArabicPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بِسْمِ اللهِ"
            android:textSize="16sp"
            android:textColor="#FF2E7D32"
            android:layout_marginTop="8dp"
            android:textDirection="rtl"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF9370DB"
            android:layout_marginTop="12dp"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_height="wrap_content"
            android:text="Ketuk untuk melihat detail →"
            android:textSize="12sp"
            android:textColor="#FF666666"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>