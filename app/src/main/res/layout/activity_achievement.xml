<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    android:padding="16dp">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dpdp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFF9800">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pencapaian"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"/>

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Statistik -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tvDoaRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doa dibaca: 0"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#FF333333"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/tvGamesPlayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game dimainkan: 0"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#FF333333"
                android:layout_marginBottom="8px"/>

            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login streak: 0 hari"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#FF333333"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Achievement List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pencapaian Anda:"
        android:textSize="18sp"
        android:textColor="#FF333333"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </ScrollView>

</LinearLayout>