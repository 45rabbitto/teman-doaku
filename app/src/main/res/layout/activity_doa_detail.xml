<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F8FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#FF4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="@android:color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detail Doa"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Konten Detail Doa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <!-- Gambar Ilustrasi -->
                <ImageView
                    android:id="@+id/ivDoaImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_help"
                    android:tint="#FF4CAF50"
                    android:layout_marginBottom="24dp"/>

                <!-- Judul Doa -->
                <TextView
                    android:id="@+id/tvDoaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doa Sebelum Makan"
                    android:textSize="24sp"
                    android:textColor="#FF4CAF50"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"/>

                <!-- Bahasa Arab -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arab"
                    android:textSize="16sp"
                    android:textColor="#FF333333"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvArabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="بِسْمِ اللهِ"
                    android:textSize="24sp"
                    android:textColor="#FF2E7D32"
                    android:textDirection="rtl"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="8dp"/>

                <!-- Latin -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latin"
                    android:textSize="16sp"
                    android:textColor="#FF333333"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvLatin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bismillah"
                    android:textSize="18sp"
                    android:textColor="#FF666666"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="8dp"/>

                <!-- Terjemahan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terjemahan"
                    android:textSize="16sp"
                    android:textColor="#FF333333"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTranslation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dengan nama Allah"
                    android:textSize="16sp"
                    android:textColor="#FF666666"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>