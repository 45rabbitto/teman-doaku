<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission untuk notifikasi -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TemanDoaku"
        tools:targetApi="31">

        <!-- MAIN -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MENU & FEATURES -->
        <activity android:name=".ui.DoaListActivity" android:exported="false" />
        <activity android:name=".ui.DoaDetailActivity" android:exported="false" />
        <activity android:name=".ui.ResultActivity" android:exported="false" />
        <activity android:name=".ui.SambungAyatActivity" android:exported="false" />
        <activity android:name=".ui.TebakArtiActivity" android:exported="false" />
        <activity android:name=".ui.MinigameActivity" android:exported="false" />
        <activity android:name=".ui.AchievementActivity" android:exported="false" />
        <activity android:name=".ui.DoaPopupActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />


        <!-- NOTIFICATION -->
        <receiver
            android:name=".reminder.AlarmReceiver"
            android:exported="false" />


    </application>

</manifest>