<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission untuk notifikasi -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TemanDoaku"
        tools:targetApi="31">

        <!-- MAIN / HOME -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MENU MINIGAME -->
        <activity
            android:name=".ui.MinigameActivity"
            android:exported="false" />

        <!-- GAME SAMBUNG AYAT -->
        <activity
            android:name=".ui.SambungAyatActivity"
            android:exported="false" />

        <!-- GAME TEBAK ARTI -->
        <activity
            android:name=".ui.TebakArtiActivity"
            android:exported="false" />

        <!-- RESULT SCORE -->
        <activity
            android:name=".ui.ResultActivity"
            android:exported="false" />

        <!-- ACHIEVEMENT / TROPHY -->
        <activity
            android:name=".ui.AchievementActivity"
            android:exported="false" />

        <!-- DOA LIST -->
        <activity
            android:name=".ui.DoaListActivity"
            android:exported="false" />

        <!-- DOA DETAIL -->
        <activity
            android:name=".ui.DoaDetailActivity"
            android:exported="false" />

        <!-- NOTIFICATION -->
        <receiver
            android:name=".AlarmReceiver"
            android:exported="false" />

    </application>

</manifest>
